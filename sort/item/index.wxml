<view class="coolui-scroller-nav-item" bindtap="toggle" >
  <view class="item-title  {{isDropdownShow ? 'on' : ''}}" style="color:  {{isDropdownShow ?  activeColor : color}}">
    <view class="item-title-inner">{{title}}</view>
  </view>
</view>
<view class="dropdown-menu {{isDropdownShow ? 'on' : ''}}"  >
  <view class="dropdown-menu-inner {{isDropdownShow ? 'on' : ''}}" >
    <view class="option-item" wx:for="{{options}}" wx:key="id">
      {{item.title}}
    </view>
  </view>
</view>