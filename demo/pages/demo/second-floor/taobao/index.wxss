page {
  background-color: #fff;
}

.second-floor {
  color: #fff;
  scroll-snap-align: start;
  scroll-snap-stop: always;
  position: relative;
  background-size: 100vw auto;
  background-position: bottom center;
  height: 100%;
  position: absolute;
  width: 100%;
  background-image: url(https://test.wzs.pub/pic/taobao.png);
}

.second-floor.show {
  background-position: top center;
  background-size: auto 150%;
}

.second-floor .second-search {
  width: 100vw;
  height: 15vh;
}

.second-floor .recently-used {
  color: #fff;
  padding: 0 50rpx;
  margin-bottom: 50rpx;
}

.second-floor .recently-used .title {
  font-weight: bold;
  font-size: 32rpx;
  margin-bottom: 30rpx;
}

.second-floor .recently-used .list {
  display: flex;
  flex-wrap: wrap;
}

.second-floor .recently-used .list .item {
  text-align: center;
  font-size: 28rpx;
  width: 20%;
}

.second-floor .recently-used .list .item .icon {
  width: 3em;
  height: 3em;
  background-color: #ccc;
  border-radius: 100%;
  margin: 0 auto;
}

.second-floor .recently-used .list .item .name {
  margin: 20rpx 0;
}

.weui-cell.weui-check__label {
  display: flex;
  align-items: center;
}

.demopage .pannel-inner .scroller-pannel .des {
  text-align: left;
  margin-bottom: 20rpx;
}

radio-group {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.detail-page {
  width: 100%;
  height: 100%;
  min-height: 300px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.second-floor-refresh {
  background-color: rgba(125, 111, 147, 0);
  transition: all .4s;
}

.second-floor-refresh-back {
  background-color: #7d6f93;
  transition: all .4s;
}
