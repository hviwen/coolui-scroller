.case {
  height: 100vh;
}

.case .photo-icon {
  background-image: url("data:image/svg+xml;base64,");
  background-position: center;
  background-size: cover;
  animation: rotate 3s infinite linear;
}

.case .refresh-icon {
  position: absolute;
  left: 50%;
  top: 50%;
  margin-top: -30rpx;
  margin-left: -30rpx;
  width: 60rpx;
  height: 60rpx;
}

.case .loadmore-icon {
  width: 60rpx;
  height: 60rpx;
}

@keyframes rotate {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(1turn);
  }
}
