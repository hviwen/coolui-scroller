.case {
  height: calc(100vh - 100rpx);
}

.case .item {
  padding: 0 30rpx 30rpx;
}

.case .item:first-child {
  padding: 30rpx;
}

.case .item:last-child {
  padding: 30rpx;
}

.case .item-image {
  display: block;
  width: 100%;
  height: 300rpx;
  /* display: block; */
}

.case .item-title {
  font-size: 28rpx;
  line-height: 3em;
  background-color: #fff;
  padding: 0 30rpx;
}
